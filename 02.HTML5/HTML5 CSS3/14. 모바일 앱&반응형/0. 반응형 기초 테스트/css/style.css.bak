*{
   margin:0;
   padding:0;
}

html,body{
    height:100%;
}

img{
    max-width:100%;
	float:left;

}

#wrapper{
    width:100%;
	border:5px solid red;
}

#header{
    width:1000px;
	height:160px;
	background:yellow;
	margin:0 auto;
	position:relative;
}

#header h1.logo{
	 border:1px solid black;
	 width:200px;
	 padding-top:1%;
	 padding-bottom:1%;
	 background:red;
	 color:#fff;
	 font-size:3em;
	 position:absolute;
	 left:0;
	 top:30px;
}

#header ul#navigation{
	 border:1px solid black;
	 padding-top:20px;
	 padding-bottom:20px;
	 margin-left:30%;
	 position:absolute;
	 top:30px;
	 width:500px;
	}

#header ul#navigation li{
	 float:left;
	 width:20%;
	 background:cyan;
}

#header #qnb{
	  width:50px;
	  height:50px;
	  background:blue;
	  position:absolute;
	  right:0;
	  top:30px;
	  visibility:hidden;
}

#contents{
    width:1000px;
	height:600px;
	background:orange;
	margin:0 auto;
}

#footer{
    width:1000px;
	height:100px;
	background:gray;
	margin:0 auto;
}

/* 최대:999~최소 :481 */

@media screen and (max-width:999px){
	/*
	#wrapper{
		display:none;
	}
	*/
	#header #qnb{
	  width:50px;
	  height:50px;
	  background:blue;
	  position:absolute;
	  right:0;
	  top:10px;
	  visibility:visible;
  }
}


@media screen and (min-width:481px) and (max-width:999px){
	#header{
    width:100%;
	height:200px;
	background:yellow;
	}
	
	#contents{
	  width:100%;
	  height:800px;
	  background:pink;
	}
	
	#contents p.a .img{
	   border:5px solid red;
	   width:0;
	   height:0;
	   visibility:hidden;
	 }

	 #header ul#navigation{
        display:none;
	 }

    #footer{
    width:100%;
	height:50px;
	background:gray;
	}
}

/* 480이하 */
@media screen and (max-width:480px){

	#header{
    width:100%;
	height:150px;
	background:green;
	}

	#header ul#navigation{
        display:none;
	 }
	
	#contents{
	  width:100%;
	  height:300px;
	  background:yellow;
	}
	
	#contents p.a .img{
	   border:5px solid red;
	   visibility:visible;
	 }


   #footer{
    width:100%;
	height:30px;
	background:black;
	}
}



